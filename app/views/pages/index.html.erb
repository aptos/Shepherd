<% if current_user %>
<nav class="navbar navbar-default" role="navigation">
  <div class="container">

    <div class="navbar-header">
      <a class="navbar-brand" href="/">Shepherd</a>
    </div>
    <ul class="nav navbar-nav">
      <li ui-sref-active="active"><a ui-sref="dashboard">Dashboard</a></li>
    </ul>
    <ul class="nav navbar-nav">
      <li ui-sref-active="active"><a ui-sref="users">Users</a></li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <li class="dropdown text-normal" ng-controller="SiteCtrl">
      <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown">
        <div>{{siteNames[site]}}</div>
      </a>
      <ul class="dropdown-menu with-arrow pull-right" role="menu">
        <% Shepherd::Application.config.sites.each do |site| %>
        <li ng-hide="site == '<%= site[:db] %>'">
          <a href="javascript:;" ng-click="setSite('<%= site[:db] %>')"><%= site[:label] %></a>
        </li>
        <% end %>
      </ul>
      <li ui-sref-active="active"><a ui-sref="signout">Sign Out</a></li>
    </ul>

  </div>
</nav>
<div class="main-view-container" ui-view></div>
<% else %>
<div class="dark-page full-height">
  <div class="absolute-center text-center">
    <a class="btn btn-success btn-lg btn-inverted" href="/signin/google_login" target="_self" >hello.</a>
  </div>
</div>
<% end %>