<div class="row">
  <h4>New Users</h4>
  <% if @recent.empty? %>hey, where is everybody?<% end %>
  <% @recent.each do |user| %>
  <div class="col-sm-4" style="width:300px">
    <div class="panel panel-profile">
      <div class="bg-primary _panel-heading clearfix">
        <% if user[:profile][:s3_img_url] %>
        <a href="" class="pull-left profile">
          <img alt="" src="<%= user[:profile][:s3_img_url] %>" class="img-circle img64_64">
        </a>
        <% end %>
        <h4><%= user[:profile][:name]%></h4>
        <% if user[:profile][:positions] %>
        <p><%= user[:profile][:positions].first[0] %></p>
        <% end %>
      </div>
      <ul class="list-group">
        <% if user[:profile][:company] %>
        <li class="list-group-item">
          <i class="fa fa-building-o"></i>
          <a href=<%= user[:profile][:company]['website'] %> >
            <%= user[:profile][:company]['name'] %>
          </a>
        </li>
        <% end %>
        <li class="list-group-item">
          <i class="fa fa-globe"></i>
          <% if user[:profile][:info]['location'] %>
          <%= user[:profile][:info]['location'] %>
          <% else %>
          <%= user[:profile][:current_location]['address'] %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
  <% end %>
</div>